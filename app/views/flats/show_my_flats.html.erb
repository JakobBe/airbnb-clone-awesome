<h1 class="home-header"> Your Flats </h1>
<div class="container">
  <div class="row">
    <% @flats.each do |flat|  %>

      <div class="message">
        <% if flat.photo?%>
          <div class="card">
          <%= cl_image_tag flat.photo.path, class: "card-image message-avatar" %>
          </div>
        <% else %>
          <div class="card">
            <%= image_tag "flat_placeholder.png", class: "card-image message-avatar" %>
          </div>
        <% end %>

        <div class="message-name">
          <h4><%= flat.location %></h4>
        </div>
        <div class="message-body">
          <h3><%=flat.name %> </h2>

          <p> Price per night: $<%= flat.price %>
          </p>
          <p> Rating ****</p>
        </div>
        <div class="message-status">
           <div class="my-flat-delete">
          <%= link_to 'Delete', flat_path(flat), method: :delete, class:"navbar-wagon-item navbar-wagon-link"%>
        </div>
        </div>
      </div>
      </div>
    <% end %>
  </div>
</div>




