<div class="navbar-wagon">
  <!-- Logo -->
  <a href="/" class="navbar-wagon-brand">
    <%= image_tag "logo.png", {alt: "logo"}  %>
  </a>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">
    <%  if registration_signed_in? %>
     <%= link_to "Add a Flat", new_flat_path, class:"navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Bookings", bookings_path, class:"navbar-wagon-item navbar-wagon-link" %>
      <%= link_to 'Log out', destroy_registration_session_path, method: :delete, class:"navbar-wagon-item navbar-wagon-link" %>
    <div class="navbar-wagon-item">
      <% if current_user.try(:photo)%>
        <%= cl_image_tag current_user.photo.path, class:"avatar"%>
      <% end %>
    </div>
  </div>
  <% else %>
    <%= link_to "Log in", new_registration_session_path, class:"navbar-wagon-item navbar-wagon-link" %>
    <%= link_to 'Sign up', new_registration_registration_path, class:"navbar-wagon-item navbar-wagon-link" %>
  <% end%>
</div>


  <!-- Dropdown appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <%  if registration_signed_in? %>
         <li><%= link_to "Add a Flat", new_flat_path, class:"navbar-wagon-item navbar-wagon-link" %></li>
         <li><%= link_to "Bookings", bookings_path, class:"navbar-wagon-item navbar-wagon-link" %></li>
         <li><%= button_to 'Log out', destroy_registration_session_path, method: :delete, class:"navbar-wagon-item navbar-wagon-link" %></li>
        <% else %>
         <li><%= link_to "Log in", new_registration_session_path, class:"navbar-wagon-item navbar-wagon-link" %></li>
         <li><%= link_to 'Sign up', new_registration_registration_path, class:"navbar-wagon-item navbar-wagon-link" %></li>
        <% end  %>
      </ul>
    </div>
  </div>
</div>


