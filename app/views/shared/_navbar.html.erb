<div class="navbar-wagon sticky">
  <!-- Logo -->
  <a href="/" class="navbar-wagon-brand">
    <%= image_tag "logo.png", {alt: "logo"}  %>
  </a>
  <p>  <div id="search-bar">
    <%= form_tag(root_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Location" %>
    <%= submit_tag "Search", :name => nil, class:"search_btn" %>
    <% end %>
    </div> </p>
  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">


    <%  if current_user %>
      <%= link_to "Add a Flat", new_flat_path, class:"navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "My Flats", myflats_path, class:"navbar-wagon-item navbar-wagon-link" if current_user.flats.length > 0 %>
      <%= link_to "Bookings", bookings_path, class:"navbar-wagon-item navbar-wagon-link" %>
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <% if current_user.try(:photo)%>
          <%= cl_image_tag current_user.photo.path, class:"avatar dropdown-toggle", id:"navbar-wagon-menu", data: {toggle: 'dropdown'}%>
          <% else %>
          <%= image_tag "avatar", class:"avatar dropdown-toggle", id:"navbar-wagon-menu", data: {toggle: 'dropdown'}%>
          <% end %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li><%= link_to "My Profile", user_path(current_user), class:"navbar-wagon-item   navbar-wagon-link" %></li>
            <li><%= link_to "Edit Profile", edit_user_path(current_user), class:"navbar-wagon-item navbar-wagon-link" %></li>
            <li><%= link_to "Log out", destroy_registration_session_path, method: :delete, class:"navbar-wagon-item navbar-wagon-link" %></li>
          </ul>
        </div>
      </div>

    <% else %>
        <%= link_to "Log in", new_registration_session_path, class:"navbar-wagon-item navbar-wagon-link" %>
        <%= link_to 'Sign up', new_registration_registration_path, class:"navbar-wagon-item navbar-wagon-link" %>
    <% end%>
  </div>



